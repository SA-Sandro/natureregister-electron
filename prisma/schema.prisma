datasource db {
  provider = "sqlite"
  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model SpecimenObservation {
  uuid String @id @default(uuid())
  specimenInfoId Int  
  specimenInfo SpecimenInfo @relation(fields: [specimenInfoId], references: [id])
  
  observedAt String
  
  geoSpatialDataId Int
  geoSpatialData GeoSpatialData @relation(fields: [geoSpatialDataId], references: [id])
  comments String?

  // @@id([uuid])
}

model SpecimenInfo {
  id Int @id @default(autoincrement())
  scientificName String
  genus String
  family String
   observations   SpecimenObservation[]
}

model GeoSpatialData {
  id Int @id @default(autoincrement())
  coordinates String
  municipality String
  province String
  locality String
   observations   SpecimenObservation[]
}